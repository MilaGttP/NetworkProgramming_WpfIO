<Window x:Class="NetworkProgramming_WpfIO.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgramming_WpfIO"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#212121">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="txtMessage" Margin="20"/>
        <StackPanel Grid.Row="1">
            <TextBox x:Name="txtFrom" Margin="10"/>
            <TextBox x:Name="txtTo" Margin="10"/>

        </StackPanel>

        <Button Grid.Column="1" x:Name="SendBtn" Content="Send" Click="SendBtn_Click" Margin="20"/>
    </Grid>
</Window>
